#    - targets: ['localhost:9093']

# Load rules once and periodically evaluate them according to the global 'evaluation_interval'.
#rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

# A scrape configuration containing exactly one endpoint to scrape:
# Here it's Prometheus itself.
scrape_configs:
  # The job name is added as a label `job=<job_name>` to any timeseries scraped from this config.
  #- job_name: 'prometheus'

    # Override the global default and scrape targets from this job every 5 seconds.
    #scrape_interval: 5s
    #scrape_timeout: 5s

    # metrics_path defaults to '/metrics'
    # scheme defaults to 'http'.

    #static_configs:
      #- targets: ['localhost:9090']

  - job_name: node_exporter_hostpi
    scheme: https
    basic_auth:
      username: prometheus
      password: {{ vault (printf "%v/%v/%v/%v" "kv" "home" "logging" "hostpi") "node_exporter_password" }}
    #tls_config:
      #ca_file: prom_exporter.crt
      #insecure_skip_verify: true
    static_configs:
    - targets: ['{{ printf "%v.%v.%v.%v:%v" "ne" "hostpi" "home" "arpa" (vault "kv/home/port/node_exporter" "num") }}']

  - job_name: node_exporter_oa
    scheme: https
    basic_auth:
      username: prometheus
      password: {{ vault (printf "%v/%v/%v/%v" "kv" "home" "logging" "oa") "node_exporter_password" }}
    #tls_config:
      #ca_file: prom_exporter.crt
      #insecure_skip_verify: true
    static_configs:
    - targets: ['{{ printf "%v.%v.%v.%v:%v" "ne" "oa" "home" "arpa" (vault "kv/home/port/node_exporter" "num") }}']

  - job_name: node_exporter_ob
    scheme: https
    basic_auth:
      username: prometheus
      password: {{ vault (printf "%v/%v/%v/%v" "kv" "home" "logging" "ob") "node_exporter_password" }}
    #tls_config:
      #ca_file: prom_exporter.crt
      #insecure_skip_verify: true
    static_configs:
    - targets: ['{{ printf "%v.%v.%v.%v:%v" "ne" "ob" "home" "arpa" (vault "kv/home/port/node_exporter" "num") }}']
