version: '3.7'
services:
  ldap:
    image: localhost/ldap:0.7
    container_name: ldap
    env_file:
      - "./env_file"
    ports:
      - "{{ vault "kv/home/ips/ldap"  "ip" }}:389:389"
      - "{{ vault "kv/home/ips/ldap" "ip" }}:636:636"
    volumes:
      - ./fs/var/lib/ldap:/var/lib/ldap:Z,U
      - ./fs/etc/ldap/slapd.d:/etc/ldap/slapd.d:Z,U
      - ./fs/continer/service/slapd/assets/:/container/service/slapd/assets/:Z,U,ro
    domainname: "home.arpa"
    hostname: "ldap"
    cap_add:
      - CAP_NET_BIND_SERVICE
